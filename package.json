{
	"name": "micro-xhr",
	"version": "1.0.5",
	"description": "A tiny library for interfacing XMLHttpRequest through a promise",
	"main": "index.js",
	"files": [
		"**/!(*.test|*.conf|.*).js"
	],
	"scripts": {
		"test": "npm run lint && npm run es-check && jest",
		"lint": "cross-env NODE_ENV=production eslint \"{xhr,lib,.}/*.js\"",
		"es-check": "es-check es5 \"{xhr,lib,.}/!(*.test|*.conf).js\" --quiet"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/kasvtv/micro-xhr.git"
	},
	"keywords": [
		"xhr",
		"XMLHttpRequest",
		"promise"
	],
	"author": "Kas van 't Veer",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/kasvtv/micro-xhr/issues"
	},
	"homepage": "https://github.com/kasvtv/micro-xhr#readme",
	"devDependencies": {
		"@types/jest": "^24.0.13",
		"cross-env": "^5.2.0",
		"es-check": "^5.0.0",
		"eslint": "^5.16.0",
		"eslint-plugin-import": "^2.17.3",
		"eslint-plugin-jest": "^22.6.4",
		"jest": "^24.8.0"
	},
	"dependencies": {},
	"eslintIgnore": [
		"!.eslintrc.js"
	]
}
